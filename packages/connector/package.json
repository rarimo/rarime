{
  "name": "@rarimo/connector",
  "version": "0.1.0",
  "description": "Adapter for installing snap and exposes API toward snap on dApps",
  "license": "(MIT-0 OR Apache-2.0)",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "yarn run prebuild && yarn run build:lib && yarn run build:types",
    "build:lib": "tsc --build tsconfig.json",
    "build:types": "tsc --emitDeclarationOnly",
    "lint": "yarn run lint:style && yarn run lint:types",
    "lint:types": "tsc --noEmit --pretty",
    "lint:style": "eslint --color 'src/**/*.{js,ts,tsx}'",
    "lint:style:fix": "yarn run lint:style --fix"
  },
  "devDependencies": {
    "@ethersproject/providers": "5.7.2",
    "eslint": "8.21.0",
    "typescript": "4.7.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
